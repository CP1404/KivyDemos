BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_number
            text: ''
            multiline: False
            input_filter: 'int'
            size_hint_x: 0.3

        Button:
            text: 'Square'
            on_press: app.handle_square()
            size_hint_x: 0.3

        Label:
            id: output_label
            text: ''
            color: (1, 0.4, 0.7, 1)  # Pink
            size_hint_x: 0.4

    Label:
        text: 'Enter a number and press "Square"'
        size_hint_y: 0.2
